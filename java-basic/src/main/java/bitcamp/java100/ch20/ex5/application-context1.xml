<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- String 과 자바 원시타입(primitive type)인 경우 문자열을 자동으로 해당타입으로 변환해준다 -->
	<bean id="c1" class="bitcamp.java100.ch20.ex5.MyClass">
	   <property name="varString" value="문자열"/>
	   <property name="varByte" value="100"/>
	   <property name="varShort" value="200"/>
	   <property name="varInt" value="300"/>
	   <property name="varLong" value="400"/>
	   <property name="varFloat" value="3.14"/>
	   <property name="varDouble" value="3.141592"/>
	   <property name="varBoolean" value="true"/>
	   <property name="varChar" value="헐"/>
	   
	</bean>

</beans>